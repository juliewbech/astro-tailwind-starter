---
const { href = "#", target = "_self", variant = "primary", size = "medium" } = Astro.props;

const linkStyling = "duration-1000 font-[Loved_by_the_King]"; // Tilf√∏j font her!

const variantClasses = {
    "textlink": "underline text-blue-800",
    "primary": "inline-block border-2 my-4 px-16 py-4 hover:text-white border-black hover:bg-black",
    "secondary": "inline-block border-2 my-4 px-16 py-4 hover:text-white border-petrol-400 hover:bg-petrol-600 text-petrol-500"
};

const sizeClasses = {
    "standard": "hover:font-bold",
    "large": "text-4xl font-bold uppercase hover:-skew-x-20",
    "medium": "text-xl hover:-skew-x-20",
    "small": "text-large hover:-skew-x-20"
};
---

<a href={href} target={target} class:list={[linkStyling, variantClasses[variant], sizeClasses[size]]}>
    <slot />
</a>
